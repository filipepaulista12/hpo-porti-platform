# Database (Docker local) - Porta 5433 para evitar conflito
DATABASE_URL="postgresql://postgres:hpo_password@localhost:5433/hpo_platform?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="hpo-platform-2025-secret-key-change-in-production-abc123xyz789"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:5173"

# ORCID OAuth
# Para obter credenciais:
# - Sandbox (dev): https://sandbox.orcid.org/developer-tools
# - Production: https://orcid.org/developer-tools
# Veja instruções completas em ORCID_SETUP.md
ORCID_CLIENT_ID=""
ORCID_CLIENT_SECRET=""
ORCID_REDIRECT_URI="http://localhost:3001/api/auth/orcid/callback"

# OpenAI API (opcional - para sugestões de IA)
OPENAI_API_KEY=""

# Email (opcional - para notificações)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@hpo-platform.org"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
