FROM node:20-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./
COPY tsconfig.json ./

# Instalar dependências
RUN npm install

# Copiar prisma schema
COPY prisma ./prisma

# Gerar Prisma Client
RUN npx prisma generate

# Copiar código fonte
COPY src ./src

# Expor porta
EXPOSE 3001

# Comando padrão
CMD ["npm", "run", "dev"]
