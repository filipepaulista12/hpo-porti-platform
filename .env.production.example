# ==============================================
# PRODUÇÃO - Variáveis de Ambiente
# ==============================================
# ATENÇÃO: Nunca commite este arquivo com valores reais!
# Copie para .env.production.local e configure com valores reais

# ==============================================
# DATABASE
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=MUDE_ESTA_SENHA_FORTE_123!
POSTGRES_DB=hpo_platform

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=GERE_UMA_CHAVE_SECRETA_ALEATORIA_MINIMO_32_CARACTERES
JWT_EXPIRES_IN=7d

# ==============================================
# FRONTEND & CORS
# ==============================================
FRONTEND_URL=https://hpo.seu-dominio.com
CORS_ORIGIN=https://hpo.seu-dominio.com,https://www.seu-dominio.com

# URLs para build do frontend
VITE_API_URL=https://api.seu-dominio.com/api
VITE_WS_URL=wss://api.seu-dominio.com

# ==============================================
# EMAIL (SMTP)
# ==============================================
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua_senha_app_16_digitos
EMAIL_FROM=noreply@hpo-platform.com

# ==============================================
# ORCID OAUTH
# ==============================================
ORCID_ENABLED=true
ORCID_CLIENT_ID=APP-XXXXXXXXXXXXXXXX
ORCID_CLIENT_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ORCID_REDIRECT_URI=https://api.seu-dominio.com/api/auth/orcid/callback

# ==============================================
# OPENAI (OPCIONAL)
# ==============================================
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxx
OPENAI_ENABLED=false

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
NODE_ENV=production

